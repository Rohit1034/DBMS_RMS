<body>
    <div class="main-panel">
        <h1>Ration Dharak</h1>
    </div>

    <div class="container">
        <!-- Sidebar Menu -->
        <div class="menu-bar">
            <ul>
                <li><a href="#" onclick="showPanel('rationCardDetails')">Ration Card Details</a></li>
                <li><a href="#" onclick="showPanel('eligibilityVerification')">Eligibility Verification</a></li>
                <li><a href="#" onclick="showPanel('newComplaint')">New Complaint</a></li>
                <li><a href="#" onclick="showPanel('notifications')">Notifications</a></li>
                <li><a href="#" onclick="showPanel('records')">Records</a></li>
            </ul>
        </div>

        <!-- Content Panel -->
        <div class="content-panel">
            <!-- Ration Card Details Section -->
            <div id="rationCardDetails" class="panel-section active">
                <h2>Ration Card Details</h2>
                <div class="card-info">
                    <p><strong>Card Number:</strong> <%=card_no%></p>
                    <p><strong>Card Type:</strong> <%=card_type%></p>
                    <p><strong>Expiry Date:</strong> <%=expiry%></p>
                    <p><strong>Member Count:</strong><%=member_no%></p>
                </div>
                <div class="buttons">
                    <button onclick="showAddMemberPopup()">Add Member</button>
                    <button onclick="showMembers()">Show Members</button>
                </div>
                <table id="membersTable" style="display:none;"> <thead>
                     <tr> 
                        <th>Name</th> 
                        <th>Date of Birth</th> 
                        <th>Aadhaar Number</th> 
                        <th>Relationship</th> 
                    </tr> 
                </thead>    
                <tbody> <!-- Member rows will be inserted here --> </tbody> 
                </table>
            </div>
            
            <!-- Eligibility Verification Section -->
            <div id="eligibilityVerification" class="panel-section">
                <h2>Eligibility Verification</h2>
                <div id="modal" class="modal">
                    <div class="modal-content">
                      <span class="close" id="closeModal">&times;</span>
                      <p id="modalMessage"></p>
                    </div>
                  </div>
                  
                  <!-- Example Form -->
                  <form id="eligibilityForm" method="post">
                    <label for="income"><strong>Annual Income:</strong></label>
                    <input type="text" name="annual_income" placeholder="Annual Income" required>

                    <label for="occupation"><strong>Occupation:</strong></label>
                    <input type="text" name="occupation" placeholder="Occupation" required>
                    <button type="submit">Verify Eligibility</button>
                  </form>
            </div>
            <!-- New Complaint Section -->
            <div id="newComplaint" class="panel-section">
                <h2>New Complaint</h2>
                <form id="new_complaint" method="post" class="my-login-validation" action="/new_complaint" novalidate>
                    <div class="form-group">
                        <label for="complaint_type">Select Complaint Type:</label>
                        <select id="complaint_type" name="complaint_type" class="form-control">
                            <option value="General Inquiry">General Inquiry</option>
                            <option value="Technical Issue">Technical Issue</option>
                            <option value="Billing Issue">Billing Issue</option>
                            <option value="Service Complaint">Service Complaint</option>
                            <option value="Delivery Issue">Delivery Issue</option>
                            <option value="Feedback">Feedback</option>
                            <option value="OTHER">Other</option>
                        </select>
                    </div>
            
                    <div class="form-group">
                        <label for="description_complaint">Description (max 20 words)</label>
                        <input id="description_complaint" type="text" class="form-control" name="description_complaint" placeholder="Enter Description" required>
                    </div>
            
                    <div class="form-group">
                        <label for="fps_id">FPS ID</label>
                        <input id="fps_id" type="text" class="form-control" name="fps_id" placeholder="Enter FPS ID" required>
                    </div>
            
                    <div class="form-group m-0">
                        <button type="submit" class="btn btn-primary btn-block">Submit</button>
                    </div>
                </form>
            </div>
            
            <div id="notifications" class="panel-section">
                <h2>Notifications</h2>
                <% if (notifications.length > 0) { %>
                    <table style="width: 100%; border-collapse: collapse;">
                        <thead>
                            <tr style="background-color: #f2f2f2;">
                                <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Message</th>
                                <th style="border: 1px solid #ddd; padding: 8px; text-align: left;">Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% notifications.forEach(notification => { %>
                                <tr>
                                    <td style="border: 1px solid #ddd; padding: 8px;"><%= notification.message %></td>
                                    <td style="border: 1px solid #ddd; padding: 8px;"><%= new Date(notification.timesent).toLocaleString() %>

                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <p>There are currently no notifications.</p>
                <% } %>
            </div>
            

            <div id="records" class="panel-section">
                
                    <h2>Distribution Records</h2>
                    
                    <!-- Check if there are records -->
                    <% if (records.length > 0) { %>
                      <table>
                        <thead>
                          <tr>
                            <th>Item Name</th>
                            <th>Quantity Distributed(KG)</th>
                            <th>Distribution Date</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% records.forEach(function(record) { %>
                            <tr>
                              <td><%= record.item_name %></td>
                              <td><%= record.Quantity_distributed %></td>
                              <td><%= record.distribution_date %></td>
                            </tr>
                          <% }); %>
                        </tbody>
                      </table>
                    <% } else { %>
                      <p>No distribution records available for this beneficiary.</p>
                    <% } %>
                  
            </div>
        </div>
    </div>

    <!-- Edit Ration Card Popup -->
    <div id="editPopup" class="popup">
        <div class="popup-content">
            <h3>Edit Ration Card Details</h3>
            <label for="editCardNumber">Card Number:</label>
            <input type="text" id="editCardNumber" placeholder="Enter card number">
            
            <label for="editCardType">Card Type:</label>
            <input type="text" id="editCardType" placeholder="Enter card type">
            
            <label for="editExpiryDate">Expiry Date:</label>
            <input type="date" id="editExpiryDate">
            
            <label for="editMemberCount">Member Count:</label>
            <input type="number" id="editMemberCount" placeholder="Enter member count">
            
            <button onclick="changeDetails()">Change</button>
            <button onclick="closeEditPopup()">Cancel</button>
        </div>
    </div>

    <!-- Add Member Popup -->
    <div id="addMemberPopup" class="popup">
        <div class="popup-content">
            <form action="/add_member" method="post">
                <h3>Add New Member</h3>
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" placeholder="Enter name" required>
                
                <label for="dob">Date of Birth:</label>
                <input type="date" id="dob" name="dob" required>
                
                <label for="aadhar">Aadhaar Number:</label>
                <input type="text" id="aadhar_number" name="aadhaar_number" placeholder="Enter Aadhaar number" required>
                
                <label for="relationship">Relationship:</label>
                <input type="text" id="relationship" name="relationship" placeholder="Enter relationship" required>
                
                <div class="button-container">
                    <button type="submit">Add Member</button>
                    <button type="button" onclick="closeAddMemberPopup()">Cancel</button>
                </div>
            </form>
        </div>
    </div>
    
    <script>
        document.getElementById('eligibilityForm').addEventListener('submit', async function (event) {
            event.preventDefault(); // Prevent the default form submission
        
            const formData = {
                annual_income: this.annual_income.value,
                occupation: this.occupation.value
            };
        
            const response = await fetch('/eligibility_verification', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(formData),
            });
        
            const result = await response.json(); // Parse the JSON response
        
            // Display the response in the modal
            const modalMessage = document.getElementById('modalMessage');
            const modal = document.getElementById('modal');
        
            if (result.success) {
                modalMessage.textContent = result.message +
                    (result.verification_status ? ` Status: ${result.verification_status}` : '') +
                    ` Verified: ${result.verified}`;
            } else {
                modalMessage.textContent = result.message;
            }
        
            modal.style.display = 'block'; // Show the modal
        });
        
    </script>
    <script>
        function showPanel(panelId) {
            document.querySelectorAll('.panel-section').forEach(section => section.classList.remove('active'));
            document.getElementById(panelId).classList.add('active');
        }

        function showEditPopup() {
            document.getElementById("editPopup").style.display = "flex";
        }

        function closeEditPopup() {
            document.getElementById("editPopup").style.display = "none";
        }

        function showAddMemberPopup() {
            document.getElementById("addMemberPopup").style.display = "flex";
        }

        function closeAddMemberPopup() {
            document.getElementById("addMemberPopup").style.display = "none";
        }

        function showMembers() { 
            const table = document.getElementById("membersTable"); 
            table.style.display = table.style.display === "none" ? "table" : "none"; 
            if (table.style.display === "table") { 
                fetchMembers(); 
            } 
        }

        async function fetchMembers() { 
            try { 
                const response = await fetch('/get_members'); 
                // Adjust endpoint as needed 
                const members = await response.json(); 
                const tbody = document.getElementById("membersTable").querySelector("tbody"); 
                tbody.innerHTML = ""; 
                // Clear existing rows 
                members.forEach(member => { 
                    const row = document.createElement("tr"); 
                    row.innerHTML = ` 
                    <td>${member.name}</td> 
                    <td>${new Date(member.dob).getDate().toString().padStart(2, '0')}-${(new Date(member.dob).getMonth() + 1).toString().padStart(2, '0')}-${new Date(member.dob).getFullYear()}</td>
                    <td>${member.aadhaar_number}</td> 
                    <td>${member.relationship}</td>
                     `; tbody.appendChild(row); 
                    }); 
                } catch (err) {
                    console.error("Failed to fetch members:", err); 
                } 
            }
        function changeDetails() {
            // Logic to update ration card details
            closeEditPopup();
        }

        function addMember() {
            // Logic to add a new member
            closeAddMemberPopup();
        }
    </script>
