<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ration Dharak</title>
    <link rel="stylesheet" href="stylefps.css">
    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            background-image: url('https://png.pngtree.com/background/20211215/original/pngtree-dove-yellow-indian-independence-day-background-picture-image_1456724.jpg');
            background-size: cover;
            background-attachment: fixed;
            margin: 0;
            color: #333;
        }
        
        .main-panel {
            text-align: center;
            padding: 20px;
            background-color: #004d4d;
            color: white;
        }
        
        h1 {
            margin: 0;
            font-size: 2.5em;
        }

        .container {
            display: flex;
            height: calc(100vh - 80px);
            overflow: hidden;
        }

        /* Sidebar Menu */
        .menu-bar {
            width: 220px;
            background-color: #006666;
            color: white;
            padding-top: 20px;
        }

        .menu-bar ul {
            list-style: none;
            padding: 0;
        }

        .menu-bar ul li {
            padding: 15px;
            cursor: pointer;
        }

        .menu-bar ul li:hover {
            background-color: #004d4d;
        }

        .menu-bar ul li a {
            color: white;
            text-decoration: none;
            font-weight: bold;
            display: block;
        }

        /* Content Panel */
        .content-panel {
            flex-grow: 1;
            padding: 20px;
            background: rgba(255, 255, 255, 0.9);
            overflow-y: auto;
        }

        .panel-section {
            display: none;
        }

        .panel-section.active {
            display: block;
        }

        h2 {
            color: #006666;
            border-bottom: 2px solid #004d4d;
            padding-bottom: 10px;
        }

        .card-info p {
            margin: 10px 0;
            font-weight: bold;
        }

        button {
            background-color: #006666;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-right: 10px;
        }

        button:hover {
            background-color: #004d4d;
        }

        /* Popup styling */
        .popup {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .popup-content {
            background-color: white;
            padding: 20px;
            width: 300px;
            border-radius: 8px;
            text-align: left;
        }

        .popup-content h3 {
            margin-top: 0;
        }
    </style>
</head>
<body>
    <div class="main-panel">
        <h1>FPS Dashboard</h1>
    </div>

    <div class="container">
        <!-- Sidebar Menu -->
        <div class="menu-bar">
            <ul>
                <li><a href="#" onclick="showPanel('addStock')">Add Stock</a></li>
                <li><a href="#" onclick="showPanel('eligibilityVerification')">Grahak Records</a></li>
                <li><a href="#" onclick="showPanel('newComplaint')">Eligibility Verification</a></li>
                <li><a href="#" onclick="showPanel('notifications')">Notifications</a></li>
            </ul>
        </div>
        <div class="content-panel">
            <!-- Ration Card Details Section -->
            <div id="rationCardDetails" class="panel-section active">
                <h2>FPS Details</h2>
                <div class="card-info">
                    <p><strong>FPS ID : </strong> <%=fps_id%></p>
                    <p><strong>Shop Name: </strong> <%=shop_name%></p>
                    <p><strong>Sevak Name: </strong> <%=fname%></p>
                    <p><strong>City: </strong> <%=city%></p>
                    <p><strong>Contact: </strong> <%=contact%></p>
                </div>
            </div>
        </div>
        <!-- Content Panel -->
        <div class="content-panel">
            <!-- Add Stock Section -->
            <div id="addStock" class="panel-section">
                <h2>Add New Stock</h2>
                <form action="/add_stock" method="post">
                    
                    <div class="form-group">
                        <label for="quantity">Quantity</label>
                        <input type="number" id="quantity" name="quantity" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="quantity">Stock name</label>
                        <input type="text" id="stock_name" name="stock_name" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="stock_date">Date</label>
                        <input type="date" id="stock_date" name="stock_date" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Stock</button>
                </form>
            </div>

            <!-- Eligibility Verification Section -->
            <div id="eligibilityVerification" class="panel-section">
                <h2>Eligibility Verification</h2>
                <form action="/eligbilty_verification" method="post">
                    <label for="income"><strong>Annual Income:</strong></label>
                    <input type="number" id="income" name="income" placeholder="Enter income">
                    
                    <label for="occupation"><strong>Occupation:</strong></label>
                    <input type="text" id="occupation" name="occupation" placeholder="Enter occupation">
                    
                    <label><strong>Verification Status:</strong></label>
                    <input type="checkbox" id="verificationStatus" disabled> Verified
                    
                    <label for="verificationDate"><strong>Verification Date:</strong></label>
                    <input type="date" id="verificationDate" name="verificationDate" readonly>
                    <button type="submit">Verify</button>
                </form>
            </div>

            <!-- New Complaint Section -->
            <div id="newComplaint" class="panel-section">
                <h2>New Complaint</h2>
                <form id="new_complaint" method="post" action="/new_complaint">
                    <label for="complaint_type">Select Complaint Type:</label>
                    <select id="complaint_type" name="complaint_type">
                        <option value="GEN">General Inquiry</option>
                        <option value="TECH">Technical Issue</option>
                        <option value="BILL">Billing Issue</option>
                        <option value="SERV">Service Complaint</option>
                        <option value="DEL">Delivery Issue</option>
                        <option value="FEED">Feedback</option>
                        <option value="OTHER">Other</option>
                    </select>
                    <div class="form-group">
                        <label for="description_complaint">Description (max 20 words)</label>
                        <input id="description_complaint" type="text" class="form-control" name="description_complaint" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </form>
            </div>

            <!-- Notifications Section -->
            <div id="notifications" class="panel-section">
                <h2>Notifications</h2>
                <p>There are currently no notifications.</p>
            </div>
        </div>
    </div>

    <script>
        function showPanel(panelId) {
            document.querySelectorAll('.panel-section').forEach(section => section.classList.remove('active'));
            document.getElementById(panelId).classList.add('active');
        }
    </script>
</body>
</html>
