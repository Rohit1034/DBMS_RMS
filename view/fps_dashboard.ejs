<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ration Dharak</title>
    <link rel="stylesheet" href="stylefps.css">
    <style>
        /* Basic modal styling */
        .modal {
          display: none; /* Hidden by default */
          position: fixed;
          z-index: 1;
          left: 0;
          top: 0;
          width: 100%;
          height: 100%;
          overflow: auto;
          background-color: rgb(0,0,0); 
          background-color: rgba(0,0,0,0.4); /* Black with opacity */
          padding-top: 60px;
        }
    
        .modal-content {
          background-color: #fefefe;
          margin: 5% auto;
          padding: 20px;
          border: 1px solid #888;
          width: 80%;
          text-align: center;
        }
    
        .close {
          color: #aaa;
          float: right;
          font-size: 28px;
          font-weight: bold;
        }
    
        .close:hover,
        .close:focus {
          color: black;
          text-decoration: none;
          cursor: pointer;
        }
    
        .error {
          color: red;
        }
    
        .success {
          color: green;
        }
      </style>
    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            background-image: url('https://png.pngtree.com/background/20211215/original/pngtree-dove-yellow-indian-independence-day-background-picture-image_1456724.jpg');
            background-size: cover;
            background-attachment: fixed;
            margin: 0;
            color: #333;
        }
        
        .main-panel {
            text-align: center;
            padding: 20px;
            background-color: #004d4d;
            color: white;
        }
        
        h1 {
            margin: 0;
            font-size: 2.5em;
        }

        .container {
            display: flex;
            height: calc(100vh - 80px);
            overflow: hidden;
        }

        /* Sidebar Menu */
        .menu-bar {
            width: 220px;
            background-color: #006666;
            color: white;
            padding-top: 20px;
        }

        .menu-bar ul {
            list-style: none;
            padding: 0;
        }

        .menu-bar ul li {
            padding: 15px;
            cursor: pointer;
        }

        .menu-bar ul li:hover {
            background-color: #004d4d;
        }

        .menu-bar ul li a {
            color: white;
            text-decoration: none;
            font-weight: bold;
            display: block;
        }

        /* Content Panel */
        .content-panel {
            flex-grow: 1;
            padding: 20px;
            background: rgba(255, 255, 255, 0.9);
            overflow-y: auto;
        }

        .panel-section {
            display: none;
        }

        .panel-section.active {
            display: block;
        }

        h2 {
            color: #006666;
            border-bottom: 2px solid #004d4d;
            padding-bottom: 10px;
        }

        .card-info p {
            margin: 10px 0;
            font-weight: bold;
        }

        button {
            background-color: #006666;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-right: 10px;
        }

        button:hover {
            background-color: #004d4d;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            border: 1px solid #004d4d;
            text-align: left;
        }

        th {
            background-color: #004d4d;
            color: white;
        }

        /* Popup styling */
        .popup {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .popup-content {
            background-color: white;
            padding: 20px;
            width: 300px;
            border-radius: 8px;
            text-align: left;
        }

        .popup-content h3 {
            margin-top: 0;
        }
    </style>
</head>
<body>
    <div class="main-panel">
        <h1>FPS Dashboard</h1>
    </div>

    <div class="container">
        <!-- Sidebar Menu -->
        <div class="menu-bar">
            <ul>
                
                <li><a href="#" onclick="showPanel('addStock')">Add Stock</a></li>
                <li><a href="#" onclick="showPanel('eligibilityVerification')">Eligibility Verification</a></li>
                <li><a href="#" onclick="showPanel('complaintsSection')">Complaint</a></li>
                
                <li><a href="#" onclick="showPanel('record')">Record</a></li>
            </ul>
        </div>
        <div class="content-panel">
            <!-- Ration Card Details Section -->
            <div id="rationCardDetails" class="panel-section active">
                <h2>FPS Details</h2>
                <div class="card-info">
                    <p><strong>FPS ID : </strong> <%= fps_id %></p>
                    <p><strong>Shop Name: </strong> <%= shop_name %></p>
                    <p><strong>Sevak Name: </strong> <%= fname %></p>
                    <p><strong>City: </strong> <%= city %></p>
                    <p><strong>Contact: </strong> <%= contact %></p>
                </div>
            </div>

            <!-- Add Stock Section -->
            <div id="addStock" class="panel-section">
                <h2>Add New Stock</h2>
                <form action="/add_stock" method="post">
                    <div class="form-group">
                        <label for="quantity">Quantity</label>
                        <input type="number" id="quantity" name="quantity" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="quantity">Stock name</label>
                        <input type="text" id="stock_name" name="stock_name" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="stock_date">Date</label>
                        <input type="date" id="stock_date" name="stock_date" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Stock</button>
                </form>
            </div>

            <!-- Eligibility Verification Section -->
            <div id="eligibilityVerification" class="panel-section">
                <h2>Eligibility Verification</h2>
                <table>
                    <thead>
                        <tr>
                            <th>Ben ID</th>
                            <th>Annual Income</th>
                            <th>Occupation</th>
                            <th>Verification Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% eligibilityRecords.forEach(record => { %>
                            <tr>
                                <td><%= record.ben_id %></td>
                                <td><%= record.annual_income %></td>
                                <td><%= record.occupation %></td>
                                <td><%= record.verification_status %></td>
                                <td>
                                    <!-- Verify Form -->
                                    <form action="/verify_eligibility" method="POST" style="display:inline;">
                                        <input type="hidden" name="ben_id" value="<%= record.ben_id %>" />
                                        <input type="hidden" name="verified" value="true" /> <!-- 'true' for verified -->
                                        <input type="hidden" name="verification_status" value="verified" />
                                        <button type="submit" style="background-color: green; color: white; padding: 5px 10px; border: none; cursor: pointer;">Verify</button>
                                    </form>
                                    <!-- Reject Form -->
                                    <form action="/verify_eligibility" method="POST" style="display:inline;">
                                        <input type="hidden" name="ben_id" value="<%= record.ben_id %>" />
                                        <input type="hidden" name="verified" value="false" /> <!-- 'false' for rejected -->
                                        <input type="text" name="verification_status" value="<%= record.verification_status %>" />
                                        <button type="submit" style="background-color: red; color: white; padding: 5px 10px; border: none; cursor: pointer;">Reject</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

            <!-- New Complaint Section -->
            <!-- Complaint Table Section -->
<!-- New Complaint Section (Complaint Table Section) -->
<div id="complaintsSection" class="panel-section">
    <h2>Complaints</h2>
    <table>
        <thead>
            <tr>
                <th>Complaint ID</th>
                <th>Complaint Type</th>
                <th>Description</th>
                <th>Status</th>
                <th>Update Status</th>
            </tr>
        </thead>
        <tbody>
            <% if (complaintsRows.length > 0) { %>
                <% complaintsRows.forEach(complaint => { %>
                    <tr>
                        <td><%= complaint.complaint_ID %></td>
                        <td><%= complaint.complaint_type %></td>
                        <td><%= complaint.description_complaint %></td>
                        <td><%= complaint.status %></td>
                        <!-- Input to update the status -->
                        <td>
                            <form method="POST" action="/update_complaint_status/<%= complaint.complaint_ID %>">
                                <input type="text" name="status" placeholder="Status" required>
                                <button type="submit">Update Status</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr><td colspan="5">No complaints found</td></tr>
            <% } %>
        </tbody>
    </table>
</div>





            <!-- Record Section -->
            <div id="record" class="panel-section">
                <h2>Record Entry</h2>
                <form action="/add_record" method="POST">
                    <label for="ben_id">Beneficiary ID:</label>
                    <input type="number" id="ben_id" name="ben_id" required>
                  
                    <label for="item_name">Item Name:</label>
                    <input type="text" id="item_name" name="item_name" required>
                  
                    <label for="quantity_distributed">Quantity Distributed:</label>
                    <input type="number" id="quantity_distributed" name="quantity_distributed" required>
                  
                    <label for="distribution_date">Distribution Date:</label>
                    <input type="date" id="distribution_date" name="distribution_date" required>
                  
                    <button type="submit">Add Record</button>
                  </form>
                  
                 
                  
            </div>
        </div>
    </div>
    <div id="messageModal" class="modal">
        <div class="modal-content">
          <span class="close">&times;</span>
          <p id="messageText"></p>
        </div>
      </div>
    
      <script>
        // Get the URL parameters
        const urlParams = new URLSearchParams(window.location.search);
        const message = urlParams.get('message');
        const error = urlParams.get('error');
    
        // If there's a message or error, show it in the modal
        const modal = document.getElementById("messageModal");
        const closeBtn = document.querySelector(".close");
        const messageText = document.getElementById("messageText");
    
        if (message) {
          messageText.innerText = message;
          messageText.classList.add("success");
          modal.style.display = "block";
        } else if (error) {
          messageText.innerText = error;
          messageText.classList.add("error");
          modal.style.display = "block";
        }
    
        // Close the modal when the user clicks on the close button
        closeBtn.onclick = function() {
          modal.style.display = "none";
        }
    
        // Close the modal if the user clicks outside of it
        window.onclick = function(event) {
          if (event.target === modal) {
            modal.style.display = "none";
          }
        }
      </script>
    <script>
        // Set the distribution_date input to today's date in YYYY-MM-DD format
        document.getElementById('distribution_date').value = new Date().toISOString().split('T')[0];
      </script>
    <script>
        function showPanel(panelId) {
            document.querySelectorAll('.panel-section').forEach(section => section.classList.remove('active'));
            document.getElementById(panelId).classList.add('active');
        }
    </script>
</body>
</html>
