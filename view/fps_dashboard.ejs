        .main-panel {
            text-align: center;
            padding: 20px;
            background-color: #0f3258;
            color: white;
        }

        h1 {
            margin: 0;
            font-size: 2.5em;
            text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.7);
        }

        .container {
            display: flex;
            height: calc(100vh - 80px);
            overflow: hidden;
        }

        /* Sidebar Menu */
        .menu-bar {
            width: 220px;
            background-color:#235f9d;
            color: white;
            padding-top: 20px;
        }

        .menu-bar ul {
            list-style: none;
            padding: 0;
        }

        .menu-bar ul li {
            padding: 15px;
            cursor: pointer;
        }

        .menu-bar ul li:hover {
            background-color: #004d4d;
        }

        .menu-bar ul li a {
            color: white;
            text-decoration: none;
            font-weight: bold;
            display: block;
        }

        /* Content Panel */
        .content-panel {
            flex-grow: 1;
            padding: 20px;
            background: rgba(255, 255, 255, 0.9);
            overflow-y: auto;
        }

        .panel-section {
            display: none;
        }

        .panel-section.active {
            display: block;
        }

        h2 {
            color: #006666;
            border-bottom: 2px solid #004d4d;
            padding-bottom: 10px;
            text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.6);
        }

        .card-info p {
            margin: 10px 0;
            font-weight: bold;
        }

        button {
            background-color: #006666;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            margin-right: 10px;
        }

        button:hover {
            background-color: #004d4d;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            border-radius: 8px; /* Rounded corners for table */
            overflow: hidden;
        }

        th, td {
            padding: 10px;
            border: 1px solid #004d4d;
            text-align: left;
        }

        th {
            background-color: #004d4d;
            color: white;
        }

        /* Popup styling */
        .popup {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
        }

        .popup-content {
            background-color: white;
            padding: 20px;
            width: 300px;
            border-radius: 8px;
            text-align: left;
        }

        .popup-content h3 {
            margin-top: 0;
        }

        /* Modal Styling */
        .modal {
            display: none; /* Hidden by default */
            position: fixed;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0, 0, 0, 0.4); /* Black with opacity */
            padding-top: 60px;
        }

        .modal-content {
            background-color: #fefefe;
            margin: 5% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
            text-align: center;
        }

        .close {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
        }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }

        .error {
            color: red;
        }

        .success {
            color: green;
        }

        /* Styling for responsive image */
        img {
            max-width: 100%;
            height: auto;
            border-radius: 10px; /* Optional styling */
        }
